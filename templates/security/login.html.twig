{% extends 'base.html.twig' %}
{% block title %}Log in!{% endblock %}
{% block header %}{% endblock %}
{% block body %}
    <div class="header-margin"></div>
    <div class="container">
        {% for message in app.flashes('alert') %}
            <div class="alert-success container p-3 text-center message-reset">
                <h5>{{ message }}</h5>
            </div>
        {% endfor %}
    </div>
    <div class="login text-center">
<form method="post" class="form-signin">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}



    <h1 class="h3 mb-3 font-weight-normal">Connexion </h1>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
    <label for="inputPassword" class="pt-2 ">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
     <div class="pl-3 pr-3">
         <button class=" btn btn-block btn-success " type="submit">
             me conneter
         </button>
         <br>
         <div class="d-flex text-center">
             <a href="{{ path('register') }}" class=" btn btn-sm btn-info mr-2 " >
                 s'inscrire
             </a>
             <a href="{{ path('reset_password') }}" class=" btn btn-sm btn-outline-danger float-right" >
                 mot de passe oublier
             </a>
         </div>

     </div>

</form>
</div>
    <br>
    {% if app.user %}
        <div class="mb-3 text-center" style="color: #DDDDDD">
            vous ete connecter comme  {{ app.user.firstname }}, <a href="{{ path('app_logout') }}">d√©connexion </a>
        </div>
    {% endif %}
{% endblock %}
