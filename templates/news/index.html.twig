{% extends 'base.html.twig' %}

{% block title %}Hello NewsController!{% endblock %}

{% block body %}
    <div class="header-margin"></div>
    <div class="album py-5 ">
        <div class="container">
            {% for new in news %}
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                <div class="col">
                    <div class="card shadow-sm">
                        <img class="img-fluid" src="/uploads/{{ new.illustration }}" alt="">
                        <div class="card-body">
                            <h5>{{ new.title }}</h5>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="{{ path('news-view',{'title':new.title }) }}" type="button" class="btn btn-sm btn-outline-secondary">View</a>
                                </div>
                                <small class="text-muted">{{ new.createdAt|date("d/m/Y") }}</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
